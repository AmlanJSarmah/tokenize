<%- include('includes/head') %>
<!-- NAV -->
<nav class="nav-bar">
  <div class="nav-container">
    <% if(isLoggedIn) { %>
    <h1><%= userName %></h1>
    <% } else { %>
    <ul>
      <li>
        <a href="/new_account">Sign Up / Log In</a>
      </li>
    </ul>
    <% } %>
    <ul>
      <li><a href="/" class="selected">Tokens</a></li>
      <li>
        <a href="<%= isLoggedIn ? '/new' : '/sign_in' %>">New Token</a>
      </li>
      <li>
        <a href="<%= isLoggedIn ? '/my_tokens' : '/sign_in' %>">My Token</a>
      </li>
    </ul>
  </div>
</nav>
<!-- MAIN Section -->
<section class="main">
  <!-- All Open Tokens -->
  <% if (tokens.length == 0) { %>
  <div class="token-container">
    <div class="token-text">
      <h2>No Tokens Yet :(</h2>
      <p><span>Be the first one to create one</span></p>
    </div>
    <div class="token-claim"><a href="/new">Create</a></div>
  </div>
  <% } %> <% for(token of tokens){ %>
  <div class="token-container">
    <div class="token-text">
      <h2><%= token.name %> by <%= token.creator.name %></h2>
      <p><span>From : </span> <%= token.from %></p>
      <p><span>To : </span> <%= token.to %></p>
    </div>
    <div class="token-claim">
      <a href="/accept:<%= token._id %>">Accept</a>
    </div>
  </div>
  <% } %>
</section>
<%- include('includes/tail') %>
